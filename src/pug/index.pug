                        input.ctc-form__input(type="text" placeholder="Ваш контактный телефон:*" size="1")
                        textarea.ctc-form__text(name="", cols="10", rows="6" placeholder="Сообщение" size="1")
                        input.button(type="submit", value="Заказать консультацию")

